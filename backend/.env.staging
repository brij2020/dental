# Staging Environment Variables
# Update these values based on your staging infrastructure

# Environment
NODE_ENV=staging

# Server Configuration
PORT=8080

# Database Configuration
# Update with your staging MongoDB instance
MONGODB_URI=mongodb://staging-db:27017/dcms_staging
DB_NAME=dcms_staging

# JWT Configuration (Generate a strong secret for staging)
JWT_SECRET=staging-secret-key-change-this-12345

# CORS Configuration
# Update with your staging domain
CORS_ORIGIN=https://staging.dentalclinic.com

# API Configuration
API_URL=https://api-staging.dentalclinic.com
FRONTEND_URL=https://staging.dentalclinic.com

# Logging
LOG_LEVEL=info

# Email Configuration
EMAIL_USER=your-staging-email@gmail.com
EMAIL_PASS=your-staging-app-password

# Optional: Add staging-specific settings
DEBUG=false
REQUEST_TIMEOUT=30000
