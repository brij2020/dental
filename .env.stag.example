# .env.example - Environment Variables Template

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# ============================================
# DATABASE
# ============================================
# Local MongoDB
DB_URL=mongodb://admin:secure_password_here@localhost:27017/dental-clinic?authSource=admin
# AWS DocumentDB
# DB_URL=mongodb://admin:secure_password_here@dental-clinic-cluster.cluster-xxxxx.us-east-1.docdb.amazonaws.com:27017/dental-clinic?ssl=true&replicaSet=rs0&retryWrites=false

DB_PASSWORD=secure_password_here

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters
JWT_EXPIRY=7d

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# ============================================
# AWS (for production deployment)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=dental-clinic-frontend
CLOUDFRONT_DISTRIBUTION_ID=E1234ABCD5XYZ

# ============================================
# DOCKER COMPOSE
# ============================================
ADMIN_PASSWORD=mongo_express_password
GRAYLOG_SECRET=123456789012345678901234567890123456789012345678901234567890  # 64 chars
GRAYLOG_PASSWORD_SHA2=e3c3fa8d0a6a8adc9e4e1e3f3a5a7a9b1b3b5b7b9b1b3b5b7b9b1b3b5b7b9  # sha256(password)

# ============================================
# OPTIONAL: SENDGRID (for email notifications)
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@dental-clinic.com

# ============================================
# OPTIONAL: TWILIO (for SMS notifications)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_FROM_NUMBER=+1234567890

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=your_sentry_dsn_for_error_tracking
DATADOG_API_KEY=your_datadog_api_key

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_key
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # per window
